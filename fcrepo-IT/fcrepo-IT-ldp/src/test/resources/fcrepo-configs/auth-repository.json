{
  "name" : "repo",
  "jndiName" : "",
  "workspaces" : {
    "predefined" : ["default"],
    "default" : "default",
    "allowCreation" : true,
    "cacheSize" : 10000
  },
  "storage" : {
    "persistence": {
      "type": "file",
      "path" : "${fcrepoObjectDirectory}"
    },
    "binaryStorage" : {
      "type" : "file",
      "directory" : "${fcrepoBinaryDirectory}",
      "minimumBinarySizeInBytes" : 4096
    }
  },
  "security" : {
    "anonymous" : {
      "roles" : ["readonly","readwrite","admin"],
      "useOnFailedLogin" : false
    },
    "providers" : [
      { "classname" : "org.fcrepo.auth.common.ServletContainerAuthenticationProvider" }
    ]
  },
  "garbageCollection" : {
    "threadPool" : "modeshape-gc",
    "initialTime" : "00:00",
    "intervalInHours" : 24
  },
  "node-types" : ["fedora-node-types.cnd"]
}